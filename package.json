{
  "name": "pointcloud",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "electron electron.js",
    "build-scr": "vite build && electron-packager . SolarSaver --platform=win32 --arch=x64 --overwrite --out=release"
  },
  "build": {
    "appId": "com.bulat.screensaver",
    "productName": "SolarSaver",
    "files": [
      "dist/**/*",
      "electron.js",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "forceCodeSigning": false,
      "verifyUpdateCodeSignature": false
    }
  },
  "dependencies": {
    "@types/three": "^0.180.0",
    "three": "^0.180.0",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vue-tsc": "^3.1.0"
  }
}
